<%- include("header") -%>
  <div class="box" id="heading">
    <h1><%= ListTitle%> </h1>
  </div>

  <div class="row">
    <div class="box">

      <% newToDos.forEach(function(newToDo){ %>
        <form class="" action="/delete" method="post">
          <div class="item">
            <input name="checkbox" type="checkbox" value="<%= newToDo._id %>" onChange="this.form.submit()">
            <p class="todoitems"><%= newToDo.name %></p>
          </div>
          <input type="hidden" name="listName" value="<%= ListTitle %>"></input>
        </form>
      <%});%>

    <form class="item" action="/" method="post">
      <input class="input" type="text" name="nextToDo" placeholder="Next To Do" autocomplete="off">
      <button type="submit" name="list" value=<%= ListTitle%>>+</button>
    </form>
  </div>
  </div>
<%- include("footer") -%>
